---
import pages from "../data/pages.json";

const { currentPath } = Astro.props;
---

<header class="mx-auto max-w-6xl px-8 py-4">
  <nav class="flex flex-col justify-between sm:flex-row">
    <div class="mx-auto sm:mx-0">
      <a href="/"
        ><img
          src="../../logo.svg"
          alt="Formula Nano Logo"
          transition:persist
        /></a
      >
    </div>
    <ul
      class="flex h-20 place-content-between items-center font-semibold uppercase"
    >
      {
        pages.map((page) => (
          <li>
            <a
              class="nav-link"
              href={page.path}
              data-active={currentPath === page.path}
            >
              <span class="link-text">{page.name}</span>
              <svg xmlns="http://www.w3.org/2000/svg">
                <rect
                  x="1"
                  y="1"
                  width="calc(100% - 2px)"
                  height="calc(100% - 2px)"
                  rx="8"
                  ry="8"
                />
              </svg>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
<style>
  .nav-link {
    position: relative;
    display: inline-block;
    padding: 10px 16px;
    /* margin: 0px -1px; */
  }

  .nav-link svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none; /* Make sure SVG doesn't interfere with link clicks */
  }

  .nav-link > svg > rect {
    stroke: #57534f;
    stroke-width: 1;
    fill: none;
    stroke-linecap: round; /* Smooth out the corners */
    stroke-dasharray: 300; /* Increased to ensure it covers the entire path without clipping */
    stroke-dashoffset: 300; /* Match stroke-dasharray to make the path hidden initially */
    transition: stroke-dashoffset 0.8s ease-in-out;
  }

  .nav-link:hover > svg > rect {
    stroke-dashoffset: 0;
  }

  .nav-link[data-active] > svg > rect {
    stroke-dashoffset: 300;
    stroke: #78716c;
  }

  .nav-link[data-active] {
    color: #78716c;
  }
</style>
